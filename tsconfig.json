{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": ["src", "scripts", "test"],
  "exclude":  [
    "node_modules",
    "dist",
    "build",
    "output",
    "coverage",
    "dev-ex",
    "**/*.spec.ts"   // Example: ignore tests in IntelliSense
  ]
}
